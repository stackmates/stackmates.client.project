{{> _html}}

<div class='__page-container'>

  {{> m_TopBar--overlay }}
  {{> m_SiteNav--overlay }}

  <header class='u-z200 u-sizeFullHeight Banner {{{ palette }}}' role='banner'>


    <div class="Banner-intro">
      <div class='u-pullBottom'>
        <div class='_site-width'>
          <div class='_copy-width'>


            {{#if metaShowLogo }}
            <div class="u-center Logo Logo--white">
              {{> a_Logo }}
            </div>
            {{/if }}
            <h1 class='t-BannerHeading u-textCenter'><span class='u-lightText'>
            {{ collections.externalProvoke.[0].bannerSubHeading }}</span><br>{{ collections.externalProvoke.[0].bannerHeading }}</h1>
            <h6 class='u-textCenter u-marginAn u-paddingAn'>{{ collections.externalProvoke.[0].bannerIntro }}</h6>


            <a class='u-block u-textCenter u-linkClean' href="#step-1" data-scroll >
              <i class="icon ion-chevron-down"></i>
            </a>


          </div>
        </div>
      </div>
    </div>

  </header>

  <div class='__content-container'>

    <div class='__content content' role='main'>

      <div class='u-cf'>
      {{#each collections.externalProvoke }}



<div class="Card" id="step-{{ this.flow }}">
  <div class="Card-haiku" >

      <section class='__section Haiku {{ this.metaMindset }} {{ this.metaPalette }}'>

        <div class='_site-width'>
          <div class='_copy-width'>

              {{#if this.haikuHeading }}<h2 class="u-textCenter u-marginBn u-marginTn">{{{ this.haikuHeading }}}</h2> {{/if}}

              {{#if this.haikuThought }}
                <blockquote class='t-important u-textCenter'>{{{ this.haikuThought }}}</blockquote>
              {{/if}}


              <h5 class='u-textCenter u-marginBn u-marginTn'>
                <a data-step='step-{{ this.flow }}' data-js='haikuaction' class='u-linkBorderBottom' href='#'>{{{ this.haikuAction }}}</a>
              </h5>


              <div class='u-bottomRight'>
                <a class='u-linkClean' href="#step-{{ this.nextStep }}" data-scroll >
                  <i class="icon ion-chevron-down"></i>
                </a>
              </div>

          </div>
        </div>

      </section>

  </div>
  <div class="Card-details is-hidden">

      <header class='__section u-z200 u-sizeFullHeight Banner {{metaPalette}}'>

        <div class='_site-width'>
          <div class='_copy-width'>

            <div class="Banner-intro">

              <h1>{{{ this.haikuThought }}}</h1>

            </div>

          </div>
        </div>

      </header>

      <section class='__section'>

        <div class='_site-width'>
          <div class='_copy-width markdown'>

            <h2>{{{ this.haikuAction }}}</h2>

            {{#if this.introduction }} {{{ this.introduction }}} {{/if}}

            {{#if this.leadership }}
              <h3>Leadership</h3>
              {{{ this.leadership }}}
            {{/if}}

            {{#if this.communicationJob }}
              <h3>Communication</h3>
              <p><strong>Job to done:</strong> {{{ this.communicationJob }}}</p>
            {{/if}}
            {{#if this.communicationTeaching }}
              <p><strong>Teaching:</strong> {{{ this.communicationTeaching }}}</p>
            {{/if}}

            {{#if this.innovation }}
              <h3>Innovation</h3>
              {{{ this.innovation }}}

              <h4>Development</h4>
              <p><strong>Productivity:</strong> {{{ this.developmentProductivity }}}</p>
              <p><strong>Performance:</strong> {{{ this.developmentPerformance }}}</p>
              <p><strong>Flexibility:</strong> {{{ this.developmentFlexibility }}}</p>

              <h4>Ecosystem</h4>
              <p><strong>Developers:</strong> {{{ this.ecosystemDevelopers }}}</p>
              <p><strong>Modules:</strong> {{{ this.ecosystemModules }}}</p>
              <p><strong>Proof:</strong> {{{ this.ecosystemProof }}}</p>

            {{/if}}

            {{{ this.contents }}}

            <blockquote class='u-paddingBl'>
              <p>{{{ this.mainQuote }}}</p>
              <cite><a href={{{ this.mainQuoteInsightLink}}}>{{{ this.mainQuoteCite }}}</a></cite>
            </blockquote>

            <div class='u-bottomLeft'>
                <a href="#"
                   class='u-linkClean'
                   data-step='step-{{ this.flow }}'
                   data-next='step-{{ this.flow  }}'
                   data-js='haikuaction'>
                  <i class="icon ion-chevron-left"></i>
                </a>
            </div>

            <div class='u-bottomRight'>
              <a class='u-linkClean' href="#step-{{ this.nextStep }}" data-scroll >
                <i class="icon ion-chevron-down"></i>
              </a>
            </div>


          </div>

        </div>

      </section>

  </div><!-- end Card-haihu -->
</div><!-- end Card -->



      {{/each}}

      </div>

    </div>

  </div>

  {{> o_Footer }}

</div>

{{> _close}}
